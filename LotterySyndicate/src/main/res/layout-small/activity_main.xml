<RelativeLayout
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SyndicateAmount"
        android:textSize="15dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:id="@+id/etAmount"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvAmount"
        android:inputType="number"
        android:textSize="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/tvWhichGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/WhichGames"
        android:layout_below="@id/tvAmount"
        android:textSize="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="50dp"
        />
    <TextView
        android:id="@+id/tvDraws"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/tvAmount"
        android:layout_toRightOf="@id/tvWhichGames"
        android:layout_marginRight="50dp"
        android:textSize="15dp"
        android:text="@string/Draws"/>
    <TextView
        android:id="@+id/tvLinesNum"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/tvDraws"
        android:layout_below="@id/tvAmount"
        android:textSize="15dp"
        android:text="@string/Lines"
        />
    <CheckBox
        android:id="@+id/cbLotto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Lotto"
        android:textSize="15dp"
        android:layout_below="@id/tvWhichGames"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:onClick="enableDraw"
        />

    <EditText
        android:id="@+id/etLottoDraw"
        android:layout_height="wrap_content"
        android:layout_width="50dp"
        android:layout_toRightOf="@id/tvWhichGames"
        android:layout_below="@id/tvWhichGames"
        android:textSize="15dp"
        android:inputType="number"
        android:visibility="invisible"/>
    <EditText
        android:id="@+id/etLottoLines"
        android:layout_height="wrap_content"
        android:layout_width="50dp"
        android:layout_below="@id/tvWhichGames"
        android:layout_toRightOf="@id/tvDraws"
        android:inputType="number"
        android:textSize="15dp"
        />
    <CheckBox
        android:id="@+id/cbEuroMillions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/EuroMillions"
        android:textSize="15dp"
        android:layout_below="@id/cbLotto"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:onClick="enableDraw"
        />
    <EditText
        android:id="@+id/etEuroMillionsDraws"
        android:layout_height="wrap_content"
        android:layout_width="50dp"
        android:layout_toRightOf="@id/tvWhichGames"
        android:layout_below="@id/etLottoDraw"
        android:textSize="15dp"
        android:inputType="number"
        android:visibility="invisible"/>
    <EditText
        android:id="@+id/etEuroMillionsLines"
        android:layout_height="wrap_content"
        android:layout_width="50dp"
        android:layout_toRightOf="@id/tvDraws"
        android:layout_below="@id/cbLotto"
        android:inputType="number"
        android:textSize="15dp"/>
    <CheckBox
        android:id="@+id/cbHealthLotto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/HealthLotto"
        android:textSize="15dp"
        android:layout_below="@id/cbEuroMillions"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="5dp"
        android:onClick="enableDraw"
        />
    <EditText
        android:id="@+id/etHealthLottoDraws"
        android:layout_height="wrap_content"
        android:layout_width="50dp"
        android:layout_below="@id/etEuroMillionsDraws"
        android:layout_toRightOf="@id/tvWhichGames"
        android:textSize="15dp"
        android:inputType="number"
        android:visibility="invisible"/>
    <EditText
        android:id="@+id/etHealthLottoLines"
        android:layout_height="wrap_content"
        android:layout_width="50dp"
        android:layout_toRightOf="@id/tvDraws"
        android:layout_below="@id/cbEuroMillions"
        android:inputType="number"
        android:textSize="15dp"/>
    <CheckBox
        android:id="@+id/cbPlus5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Plus5"
        android:layout_below="@id/cbHealthLotto"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:visibility="invisible"
        />
    <EditText
        android:id="@+id/etPlus5Draws"
        android:layout_height="wrap_content"
        android:layout_width="50dp"
        android:layout_below="@id/etHealthLottoDraws"
        android:layout_toRightOf="@id/tvWhichGames"
        android:textSize="20dp"
        android:inputType="number"
        android:visibility="invisible"/>
    <EditText
        android:id="@+id/etPlus5Lines"
        android:layout_height="wrap_content"
        android:layout_width="50dp"
        android:layout_toRightOf="@id/tvDraws"
        android:layout_below="@id/etHealthLottoLines"
        android:inputType="number"
        android:textSize="20dp"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/tvWeeks"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/cbHealthLotto"
        android:text="@string/WeeksAmount"
        android:textSize="15dp"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:id="@+id/etWeeks"
        android:layout_height="wrap_content"
        android:layout_width="80dp"
        android:layout_toRightOf="@id/tvDraws"
        android:layout_below="@id/cbHealthLotto"
        android:inputType="number"
        android:textSize="15dp"
        android:layout_marginBottom="20dp"
        />
    <Button
        android:id="@+id/btnCalculate"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/tvWeeks"
        android:textSize="15dp"
        android:text="@string/Calculate" />

    <Spinner
        android:id="@+id/Lottospinner"
        android:layout_height="wrap_content"
        android:layout_width="100dp"
        android:layout_toRightOf="@id/tvWhichGames"
        android:layout_below="@id/tvWhichGames"
        android:textSize="15dp"/>
    <Spinner
        android:id="@+id/EuroSpinner"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvWhichGames"
        android:layout_below="@id/cbLotto"
        android:textSize="15dp" />
    <Spinner
        android:id="@+id/HealthSpinner"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cbEuroMillions"
        android:layout_toRightOf="@id/tvWhichGames"
        android:textSize="15dp"
        />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-4845797669311257/6017071547"/>

</RelativeLayout>